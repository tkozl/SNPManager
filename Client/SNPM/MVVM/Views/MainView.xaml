<Window x:Class="SNPM.MVVM.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SNPM.MVVM.Views"
        xmlns:viewModel="clr-namespace:SNPM.MVVM.ViewModels.Interfaces"
        mc:Ignorable="d"
        xmlns:uiModels="clr-namespace:SNPM.MVVM.Models.UiModels"
        d:DataContext="{d:DesignInstance Type=viewModel:IMainViewModel}"
        Title="{Binding Title}" Height="750" Width="1200"
        Background="#fafafa">
    <!--<Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>-->

    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid TextElement.Foreground="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>

        <Menu Background="#9394a5"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="_New Entry"/>
                <MenuItem Header="_addsd"/>
            </MenuItem>
            
            <MenuItem Header="_Find">
                <MenuItem Header="_asd"/>
                <MenuItem Header="_addsd"/>
            </MenuItem>

            <MenuItem Header="_Options">
                <MenuItem Header="_User Preferences" Command="{Binding PreferencesCommand}"/>
            </MenuItem>
        </Menu>

        <ContentControl x:Name="RecordsViewModel"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="10"
                        Content="{Binding RecordsViewModel}"/>

        <TextBlock Background="#9394a5"
                   Grid.Column="0"
                   Grid.Row="4"
                   Grid.ColumnSpan="4"
                   Text="No problems found"
                   Foreground="White"
                   Padding="5"
                   VerticalAlignment="Center"/>

        <ContentControl x:Name="ActivityViewModel"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="10"
                        Content="{Binding RecordsViewModel}"/>

        <ContentControl x:Name="DirectoryTree"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10"
                        Content="{Binding DirectoryTreeViewModel}" />
    </Grid>
</Window>
